{
    "name": "m1roff/date-time-helper",
    "description": "DateTime Helper",
    "type": "library",
    "require": {
        "php": "^8.1",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "license": "BSD-3-Clause",
    "autoload": {
        "psr-4": {
            "M1roff\\DateTimeHelper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "M1roff\\DateTimeHelper\\Test\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Miroff",
            "email": "m@miroff.su"
        }
    ],
    "archive": {
        "exclude": [
            "tests/",
            ".gitignore",
            ".editorconfig",
            ".php-cs-fixer.dist.php",
            "phpunit.xml"
        ]
    },
    "minimum-stability": "stable",
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    }
}
